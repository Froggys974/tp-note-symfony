<div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
  {% if event.image %}
    <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.title }}" class="w-full h-48 object-cover" />
  {% else %}
    <div class="bg-gray-700 flex items-center justify-center h-48 text-gray-500">
      Pas d'image
    </div>
  {% endif %}
  <div class="p-4">
    <h2 class="text-xl font-semibold text-red-500 mb-2">{{ event.title }}</h2>
    <p class="text-gray-300 mb-3 line-clamp-3">{{ event.description|striptags }}</p>
    <div class="text-gray-400 text-sm flex justify-between">
      <span>{{ event.startDate ? event.startDate|date('d M Y H:i') : 'Date non d√©finie' }}</span>
      <span>{{ event.location ? event.location.name : 'Lieu inconnu' }}</span>
    </div>
  </div>
</div>
