<div id="eventDetailModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
  <div class="bg-white rounded-lg shadow-lg max-w-lg w-full p-6 relative">
    <button onclick="closeModal('eventDetailModal')" class="absolute top-4 right-4 text-gray-500 hover:text-gray-700">
      &times;
    </button>
    <h2 class="text-2xl font-bold mb-4">{{ event.title }}</h2>
    <p class="mb-2"><strong>Description:</strong> {{ event.description ?: 'Pas de description' }}</p>
    <p class="mb-2"><strong>Lieu:</strong> {{ event.place.name }}</p>
    <p class="mb-2"><strong>Organisateur:</strong> {{ event.organizer.userProfile.firstName ?? event.organizer.email }}</p>
    <p class="mb-2"><strong>Date d√©but:</strong> {{ event.startDate|date('d/m/Y H:i') }}</p>
    {% if event.endDate %}
      <p class="mb-2"><strong>Date fin:</strong> {{ event.endDate|date('d/m/Y H:i') }}</p>
    {% endif %}
  </div>
</div>